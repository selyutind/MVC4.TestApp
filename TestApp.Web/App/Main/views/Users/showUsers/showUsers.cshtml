<div ng-controller="app.views.showUsers as vm">
    <!--<alert ng-repeat="alert in alerts" type="{{alert.type}}" close="vm.closeAlert($index)">{{alert.msg}}</alert>-->
    <div><alert ng-repeat="alert in alerts" type="{{alert.type}}" close="vm.closeAlert(alert)">{{ alert.msg }}</alert></div>
    <div>
        <h2>@L("ListOfUsers")</h2>
    </div>
    <div>
        <button type="button" ng-click="vm.createUser()">
            <i class="fa fa-plus btn tlb"> @L("CreateUser")</i>
        </button>
        <i class="fa fa-search">@L("SearchField")</i>    <input ng-model="vm.searchText" ng-change="vm.pageChanged()">
    </div>

    <table class="table table-striped table-condensed table-hover">
        <thead>
            <tr>
                <th></th>
                <th>@L("UserName")</th>
                <th>@L("UserLogin")</th>
                <th>@L("UserEmail")</th>
            </tr>
        </thead>
        <tbody>
            <tr data ng-repeat="user in vm.users">
                <td>
                    <a href="" ng-click="vm.editUser(user.id)"><i class="fa fa-pencil-square-o fa-1x-half"></i></a>
                    <a href="" ng-click="vm.deleteUser(user.id)"><i class="fa fa-times fa-1x-half"></i></a>
                </td>
                <td ng-bind="user.name"></td>
                <td ng-bind="user.login"></td>
                <td ng-bind="user.email"></td>
            </tr>
        </tbody>

    </table>
    <!--<div id="grid1" ui-grid="{ data: vm.myData }" class="grid"></div>-->
    <pagination page="vm.currentPage" ng-change="vm.pageChanged()" total-items="vm.totalItems" ng-model="vm.currentPage" max-size="vm.maxSize" class="pagination-sm" items-per-page="vm.itemsPerPage" boundary-links="true"></pagination>
    <div>Строк на странице
        <select aria-label="itemsPerPage" ng-model="vm.itemsPerPage" ng-change="vm.pageChanged()">
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
            <option value="10">10</option>
            <option value="20">20</option>
        </select>
    </div>
    <div>currentPage {{vm.currentPage}}</div>
    <div>itemsPerPage {{vm.itemsPerPage}}</div>
</div>